---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<BaseLayout>
  <Header />
  <main class="layout-base justify-items-center py-8">
    <div
      class="prose prose-custom prose-a:hover:decoration-primary prose-a:hover:text-foreground lg:max-w-[80ch]"
    >
      <slot name="heading" />
      <slot name="content" />
    </div>
  </main>
  <Footer />
</BaseLayout>
