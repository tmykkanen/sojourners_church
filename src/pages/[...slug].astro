---
import { getCollection, render } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";

// TODO: Sermon Page Title too large comparaed to church branding?
// TODO: Add dynamic ordering to pages
export async function getStaticPaths() {
  const pages = await getCollection("pages");
  return pages.map((page) => ({
    params: {
      slug: page.id,
    },
    props: {
      page,
    },
  }));
}

const { page } = Astro.props;
const { Content } = await render(page);
---

<BaseLayout>
  <Header />
  <main class="layout-base justify-items-center">
    <div
      class="prose prose-custom prose-strong:opacity-90 prose-a:hover:text-primary"
    >
      <Content />
    </div>
  </main>
</BaseLayout>

<style>
  @import "../styles/global.css";

  .md-wrapper {
    h1 {
      @apply text-3xl font-bold uppercase;
    }

    h2 {
      @apply text-xl font-bold uppercase md:text-2xl;
    }
    h3 {
      @apply text-xl tracking-wider uppercase md:text-2xl;
    }
    h4 {
      @apply text-foreground text-xl;
    }

    p {
      @apply text-muted-foreground;
    }

    em,
    strong {
      @apply text-foreground/80;
    }

    a {
      @apply hover:text-primary hover:underline;
    }

    ul {
      @apply list-disc;
    }

    section {
      @apply flex flex-col gap-4 md:flex-row;
    }
    .left {
      @apply md:w-1/3;
    }
    .right {
      @apply md:w-2/3;
    }
    div {
      @apply flex flex-col gap-2;
    }

    /* Sensible defaults for list styling */
    ol {
      counter-reset: counter;
      li {
        counter-increment: counter;
        padding-block: 0.5rem;
        display: flex;
        gap: var(--spacing);

        p,
        p em {
          @apply text-muted-foreground;
        }

        p strong {
          @apply text-foreground font-normal;
        }
      }
      li::before {
        content: counter(counter) ". ";
        color: var(--color-primary);
      }
    }
  }
</style>
