---
import { getCollection } from "astro:content";

import Header from "@components/Header.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

const allSermons = await getCollection("sermons");
---

<BaseLayout>
  <Header />
  <main>
    <h1 class="sr-only">Sermons</h1>
    <div class="grid grid-cols-2">
      <div>
        <h2>Latest Sermon</h2>

        {
          allSermons.map((post) => (
            <h2>
              <a href={`/sermons/${post.id}`} class="link">
                {post.data.title}
              </a>
            </h2>
          ))
        }
      </div>
      <div>
        <h2>Listen on Spotify</h2>
        <iframe
          src="https://podcasters.spotify.com/pod/show/sojourners-church/embed"
          height="100%"
          width="100%"
          frameborder="0"
          scrolling="no"></iframe>
      </div>
    </div>
    <div>
      <h2>Sermons By Series</h2>
      <div class="flex gap-6">
        <div class="card bg-base-100 image-full w-48 shadow-sm">
          <figure>
            <img
              src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp"
              alt="Shoes"
            />
          </figure>
          <div class="card-body">
            <h3 class="card-title">Sermon Title</h3>
          </div>
        </div>
        <div class="card bg-base-100 image-full w-48 shadow-sm">
          <figure>
            <img
              src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp"
              alt="Shoes"
            />
          </figure>
          <div class="card-body">
            <h3 class="card-title">Sermon Title</h3>
          </div>
        </div>
        <div class="card bg-base-100 image-full w-48 shadow-sm">
          <figure>
            <img
              src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp"
              alt="Shoes"
            />
          </figure>
          <div class="card-body">
            <h3 class="card-title">Sermon Title</h3>
          </div>
        </div>
      </div>
    </div>

    <div class="divider"></div>
    <div>
      <label class="input">
        <svg
          class="h-[1em] opacity-50"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
        >
          <g
            stroke-linejoin="round"
            stroke-linecap="round"
            stroke-width="2.5"
            fill="none"
            stroke="currentColor"
          >
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
          </g>
        </svg>
        <input type="search" class="grow" placeholder="Search" />
        <kbd class="kbd kbd-sm">âŒ˜</kbd>
        <kbd class="kbd kbd-sm">K</kbd>
      </label>
    </div>
    <div class="grid grid-cols-2">
      <div>
        <h2>Sermons By Preacher</h2>
        <select class="select">
          <option disabled selected>Pick a color</option>
          <option>Crimson</option>
          <option>Amber</option>
          <option>Velvet</option>
        </select>
      </div>
      <div>
        <h2>Sermons By Date</h2>
        <select class="select">
          <option disabled selected>Pick a color</option>
          <option>Crimson</option>
          <option>Amber</option>
          <option>Velvet</option>
        </select>
      </div>
    </div>
  </main>
</BaseLayout>
