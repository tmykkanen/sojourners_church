---
import { getCollection, getEntry } from "astro:content";
import { getHumanReadableScriptureRef } from "@src/utils/bibleParser";

import Header from "@components/Header.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import SpotifyAudioEmbed from "@components/SpotifyAudioEmbed.astro";

// Get all sermons
const allSermons = await getCollection("sermons");

// Get latest sermon from all sermons
const { id: latestSermonID, data: latestSermon } = allSermons.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
)[0];

console.log(latestSermon);

const tmp = await getEntry(latestSermon.series);

// Get latest sermon entry
// const latestSermonSeriesEntry = await getEntry(
//   "sermonSeries",
//   latestSermon.series.match(/[a-z0-9-]*.(?=.md$)/)![0]
// );

// Get all sermon series
const allSeries = await getCollection("sermonSeries");
allSeries.sort(
  (a, b) => b.data.startDate.valueOf() - a.data.startDate.valueOf(),
);

// Get all preachers
const allPreachers = await getCollection("preachers");

// Get latest preacher entry
const latestPreacherEntry = await getEntry(
  "preachers",
  latestSermon.preacher.match(/[a-z0-9-_]*.(?=.md$)/)![0],
);

const { firstName, lastName } = latestPreacherEntry?.data!;
---

<BaseLayout>
  <Header />
  <main class="layout-base">
    <h1 class="sr-only">Sermons</h1>
    <div class="grid grid-cols-2">
      <div>
        <h2 class="text-2xl uppercase">Latest Sermon</h2>
        <h3 class="text-xl">
          <a href={`/sermons/${latestSermonID}`} class="link">
            {latestSermon.title}
          </a>
        </h3>
        <div class="text-base-content/50 text-sm">
          <p>
            {
              latestSermon.date.toLocaleDateString("en-US", {
                month: "long",
                day: "2-digit",
                year: "numeric",
              })
            }
          </p>
          <p>{latestSermonSeriesEntry?.data.title}</p>
          <p>{firstName} {lastName}</p>
          <!-- TODO: Redo interaction with Bible Parser -->
          <!-- <p>{getHumanReadableScriptureRef(latestSermon.sermonText)}</p> -->
        </div>
      </div>
      <div>
        <h2 class="text-2xl uppercase">Listen on Spotify</h2>
        <SpotifyAudioEmbed spotifyLink={latestSermon.spotifyURL} />
      </div>
    </div>
    <h2 class="text-2xl uppercase">Sermons By Series</h2>
    <div class="flex gap-6">
      {
        allSeries.map(({ data: { imageSquare, title }, id }) => (
          <div class="card bg-base-200 w-48 shadow-sm">
            <a href={`/sermons/series/${id}`}>
              <figure>
                <img src={imageSquare} alt="series image" />
              </figure>
              <div class="card-body">
                <h3 class="card-title text-sm">{title}</h3>
              </div>
            </a>
          </div>
        ))
      }
    </div>

    <div class="divider"></div>
    <div>
      <label class="input">
        <svg
          class="h-[1em] opacity-50"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
        >
          <g
            stroke-linejoin="round"
            stroke-linecap="round"
            stroke-width="2.5"
            fill="none"
            stroke="currentColor"
          >
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
          </g>
        </svg>
        <input type="search" class="grow" placeholder="Search" />
        <kbd class="kbd kbd-sm">âŒ˜</kbd>
        <kbd class="kbd kbd-sm">K</kbd>
      </label>
    </div>
    <div class="grid grid-cols-2">
      <!-- <div>
        <h2>Sermons By Preacher</h2>
        <select class="select">
          <option disabled selected>Pick a Preacher</option>
          {
            allPreachers.map(({ data: { name } }) => (
              <option>
                {name.first} {name.last}
              </option>
            ))
          }
        </select>
      </div> -->
      <div>
        <h2>Sermons By Date</h2>
        <select class="select">
          <option disabled selected>Pick a color</option>
          <option>Crimson</option>
          <option>Amber</option>
          <option>Velvet</option>
        </select>
      </div>
    </div>
  </main>
</BaseLayout>
