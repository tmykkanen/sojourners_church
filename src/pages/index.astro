---
import { Image } from "astro:assets";

import BaseLayout from "@/layouts/BaseLayout.astro";
import config from "@/_site-config.json";

import { ButtonLink } from "@/components/ButtonLink";
import { StyledText } from "@/components/StyledText";

import bgImage from "@/assets/homepage-bg.webp";
---

<BaseLayout>
  <main class="relative min-h-[calc(100vh-6.5rem)]">
    <section
      class="grid min-h-screen w-full bg-cover bg-right"
      aria-labelledby="hero-heading"
    >
      <!-- BACKGROUND IMG -->
      <Image
        src={bgImage}
        alt="Homepage background"
        class="absolute inset-0 w-full h-full object-cover"
        priority
      />

      <!-- BACKGROUND OVERLAY -->
      <div
        class="bg-muted col-start-1 row-start-1 h-full w-full opacity-85"
        aria-hidden="true"
      >
      </div>

      <!-- HERO CONTENT -->
      <div class="layout-base isolate col-start-1 row-start-1 gap-y-8">
        <StyledText
          as="h2"
          id="hero-heading"
          variant="displayXL"
          set:html={config.homepage.hero}
        />
        <ButtonLink
          variant="accent"
          href={config.homepage.cta.link}
          target="_blank"
          className="w-full h-auto"
        >
          <StyledText
            as="span"
            variant="button"
            set:html={config.homepage.cta.text}
          />
        </ButtonLink>
      </div>
    </section>
  </main>
</BaseLayout>
