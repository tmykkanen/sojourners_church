{
  "collections": [
    {
      "name": "sermons",
      "label": "Sermons",
      "icon": "podium",
      "folder": "src/content/sermons",
      "create": true,
      "slug": "{{date}}-{{slug}}",
      "summary": "{{date}} - {{title}}",
      "sortable_fields": {
        "fields": ["title", "date"]
      },
      "fields": [
        {
          "name": "title",
          "label": "Title",
          "widget": "string"
        },
        {
          "name": "date",
          "label": "Date Preached",
          "widget": "datetime",
          "time_format": false,
          "date_format": "YYYY-MM-DD"
        },
        {
          "name": "series",
          "label": "Sermon Series",
          "widget": "relation",
          "collection": "series",
          "search_fields": ["name"],
          "value_field": "{{slug}}",
          "display_fields": ["name"]
        },
        {
          "name": "sermonText",
          "label": "Sermon Text(s)",
          "collapsed": "auto",
          "summary": "{{book}} {{startingChapter}}{{startingVerse | ternary(':', '')}}{{startingVerse}}{{endingVerse | ternary('â€“', '')}}{{endingChapter}}{{endingChapter | ternary(':', '')}}{{endingVerse}}",
          "widget": "list",
          "label_singular": "Sermon Text",
          "fields": [
            {
              "name": "book",
              "label": "Bible Book(s)",
              "widget": "select",
              "multiple": false,
              "options": [
                "Genesis",
                "Exodus",
                "Leviticus",
                "Numbers",
                "Deuteronomy",
                "Joshua",
                "Judges",
                "Ruth",
                "1 Samuel",
                "2 Samuel",
                "1 Kings",
                "2 Kings",
                "1 Chronicles",
                "2 Chronicles",
                "Ezra",
                "Nehemiah",
                "Esther",
                "Job",
                "Psalms",
                "Proverbs",
                "Ecclesiastes",
                "Song of Solomon",
                "Isaiah",
                "Jeremiah",
                "Lamentations",
                "Ezekiel",
                "Daniel",
                "Hosea",
                "Joel",
                "Amos",
                "Obadiah",
                "Jonah",
                "Micah",
                "Nahum",
                "Habakkuk",
                "Zephaniah",
                "Haggai",
                "Zechariah",
                "Malachi",
                "Matthew",
                "Mark",
                "Luke",
                "John",
                "Acts",
                "Romans",
                "1 Corinthians",
                "2 Corinthians",
                "Galatians",
                "Ephesians",
                "Philippians",
                "Colossians",
                "1 Thessalonians",
                "2 Thessalonians",
                "1 Timothy",
                "2 Timothy",
                "Titus",
                "Philemon",
                "Hebrews",
                "James",
                "Jude",
                "Revelation"
              ]
            },
            {
              "name": "startingChapter",
              "label": "Starting Chapter",
              "widget": "number"
            },
            {
              "name": "startingVerse",
              "label": "Starting Verse",
              "widget": "number",
              "required": false
            },
            {
              "name": "endingChapter",
              "label": "Ending Chapter",
              "widget": "number",
              "required": false
            },
            {
              "name": "endingVerse",
              "label": "Ending Verse",
              "widget": "number",
              "required": false
            }
          ]
        },

        {
          "name": "preacher",
          "label": "Preacher",
          "widget": "relation",
          "collection": "preachers",
          "search_fields": ["name.first", "name.last"],
          "value_field": "{{name.first}} {{name.last}}",
          "display_fields": ["name.first", "name.last"]
        },
        {
          "name": "spotifyLink",
          "label": "Spotify Episode Link",
          "widget": "string",
          "required": false
        },
        {
          "name": "bulletinLink",
          "label": "Bulletin Link",
          "widget": "string",
          "required": false
        },
        {
          "name": "body",
          "label": "Notes",
          "widget": "markdown",
          "required": false
        }
      ]
    }
  ]
}
