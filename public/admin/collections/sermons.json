{
  "collections": [
    {
      "name": "sermons",
      "label": "Sermons",
      "icon": "podium",
      "folder": "src/collections/sermons",
      "create": true,
      "slug": "{{date}}-{{slug}}",
      "fields": [
        {
          "name": "layout",
          "label": "Layout",
          "widget": "hidden",
          "default": "sermon"
        },
        {
          "name": "title",
          "label": "Title",
          "widget": "string"
        },
        {
          "name": "date",
          "label": "Date Preached",
          "widget": "datetime",
          "time_format": false,
          "date_format": "YYYY-MM-DD"
        },
        {
          "name": "sermon_text",
          "label": "Sermon Text",
          "widget": "string"
        },
        {
          "name": "preacher",
          "label": "Preacher",
          "widget": "relation",
          "collection": "preachers",
          "search_fields": ["first", "last"],
          "value_field": "{{slug}}",
          "display_fields": ["first", "last"]
        },
        {
          "name": "spotify_link",
          "label": "Spotify Episode Link",
          "widget": "string",
          "required": false
        },
        {
          "name": "bulletin_link",
          "label": "Bulletin Link",
          "widget": "string",
          "required": false
        },
        {
          "name": "body",
          "label": "Body",
          "widget": "markdown"
        }
      ]
    }
  ]
}
