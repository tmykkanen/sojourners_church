{
  "collections": [
    {
      "name": "series",
      "label": "Sermon Series",
      "folder": "src/collections/series",
      "create": true,
      "slug": "{{slug}}",
      "fields": [
        {
          "name": "name",
          "label": "Series Name",
          "widget": "string"
        },
        {
          "name": "image",
          "label": "Series Image",
          "widget": "image"
        },
        {
          "name": "imageSQ",
          "label": "Series Image Square",
          "widget": "image"
        },
        {
          "name": "startDate",
          "label": "Series Start Date",
          "widget": "datetime",
          "time_format": false,
          "date_format": "YYYY-MM-DD"
        },
        {
          "name": "book",
          "label": "Bible Book(s)",
          "widget": "select",
          "required": false,
          "multiple": true,
          "options": [
            "Genesis",
            "Exodus",
            "Leviticus",
            "Numbers",
            "Deuteronomy",
            "Joshua",
            "Judges",
            "Ruth",
            "1 Samuel",
            "2 Samuel",
            "1 Kings",
            "2 Kings",
            "1 Chronicles",
            "2 Chronicles",
            "Ezra",
            "Nehemiah",
            "Esther",
            "Job",
            "Psalms",
            "Proverbs",
            "Ecclesiastes",
            "Song of Solomon",
            "Isaiah",
            "Jeremiah",
            "Lamentations",
            "Ezekiel",
            "Daniel",
            "Hosea",
            "Joel",
            "Amos",
            "Obadiah",
            "Jonah",
            "Micah",
            "Nahum",
            "Habakkuk",
            "Zephaniah",
            "Haggai",
            "Zechariah",
            "Malachi",
            "Matthew",
            "Mark",
            "Luke",
            "John",
            "Acts",
            "Romans",
            "1 Corinthians",
            "2 Corinthians",
            "Galatians",
            "Ephesians",
            "Philippians",
            "Colossians",
            "1 Thessalonians",
            "2 Thessalonians",
            "1 Timothy",
            "2 Timothy",
            "Titus",
            "Philemon",
            "Hebrews",
            "James",
            "Jude",
            "Revelation"
          ]
        }
      ]
    }
  ]
}
