{
  "backend": {
    "name": "github",
    "repo": "tmykkanen/sojourners_church"
  },
  "media_folder": "public/images/uploads",
  "collections": [
    {
      "name": "blog",
      "label": "Blogzzz",
      "folder": "src/collections/blog",
      "create": true,
      "slug": "{{year}}-{{month}}-{{day}}-{{slug}}",
      "fields": [
        {
          "name": "layout",
          "label": "Layout",
          "widget": "hidden",
          "default": "blog"
        },
        {
          "name": "title",
          "label": "Title",
          "widget": "string"
        },
        {
          "name": "date",
          "label": "Publish Date",
          "widget": "datetime"
        },
        {
          "name": "body",
          "label": "Body",
          "widget": "markdown"
        }
      ]
    }
  ]
}
